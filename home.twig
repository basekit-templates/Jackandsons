
{% extends "layout.twig" %}

{% block content %}
    <div class="featureimage">
          {{widget('feature', 'featurehome', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '50','showBtn': true})|raw}}
      <header class="bk-header">
          <div class="header-container wrapper clearfix">
            <div class="companyheader clearfix">
              <div class="header-left">
                {{widget('profile', 'headersocialicons', { 'profileType':'socialicons', 'socialicons':'profile', 'refreshtime':'1800000'})|raw}}
              </div>
                  <div class="header-center">
                      {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                      {{widget('companyname', 'companyname', {"business": "LIMITED COMPANY"})|raw}}
                  </div>
                  <div class="header-right">
                      {{widget('ecombasket', 'ecombasket', {})|raw}}
                  </div>
              </div>
          </div>
      </header> 
    </div>
    <div class="navbar wrapper">
        {{widget('extendednavigation', 'navigationheader', {})|raw}}
    </div>
      <div class="canvas wrapper clearfix">
              {{widget('ecombasket', 'ecombasket', {})|raw}}
    {{widget('ecomcheckout', 'ecomcheckout', {})|raw}}
    {{widget('ecomproductslist', 'ecomproductslist', {})|raw}}
    {{widget('ecomproduct', 'ecomproduct', {})|raw}}
              {{zone('main')|raw}}
      </div> 
      <footer class="bk-footer">
              <div class="footer-container wrapper clearfix">
                  <div class="footer-left">
                      {{widget('content', 'textbox1', {content: '<h4>COPYRIGHT 2014.</h4>', lines: 'all'})|raw}}
                  </div>
                  <div class="footer-center">
                       {{widget('logo', 'logofooter', {"defaultlogo": asset('images/logo.png')})|raw}}
                       {{widget('companyname', 'companynamefooter', {"business": "LIMITED COMPANY"})|raw}}
                  </div>
                  <div class="footer-right">
                     {{widget('content', 'textbox2', {content: '<h4>INFO@JACKANDSONS.CO.UK</h4>', lines: 'all'})|raw}}
                  </div>
              </div>
      </footer>

{% endblock %}

